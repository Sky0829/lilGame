{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "FinalProjectBuild",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.c",
                "-o",
                "${workspaceFolder}/final_game.exe",
                "-Wall",
                "-Wextra"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}